{
  "@context": "https://linkedsoftwaredependencies.org/bundles/npm/@solid/community-server/^3.0.0/components/context.jsonld",
  "import": [
    "scs:config/app/main/default.json",
    "scs:config/app/init/initialize-root.json",
    "scs:config/app/setup/disabled.json",
    "scs:config/http/handler/default.json",
    "scs:config/http/middleware/websockets.json",
    "scs:config/http/server-factory/websockets.json",
    "scs:config/http/static/default.json",
    "scs:config/identity/access/public.json",
    "scs:config/identity/email/default.json",
    "scs:config/identity/handler/default.json",
    "scs:config/identity/ownership/token.json",
    "scs:config/identity/pod/static.json",
    "scs:config/identity/registration/enabled.json",
    "scs:config/ldp/authentication/dpop-bearer.json",
    "scs:config/ldp/authorization/allow-all.json",
    "scs:config/ldp/handler/default.json",
    "scs:config/ldp/metadata-parser/default.json",
    "scs:config/ldp/metadata-writer/default.json",
    "scs:config/ldp/modes/default.json",
    "scs:config/storage/backend/global-quota-file.json",
    "scs:config/storage/key-value/resource-store.json",
    "scs:config/storage/middleware/default.json",
    "scs:config/util/auxiliary/acl.json",
    "scs:config/util/identifiers/suffix.json",
    "scs:config/util/index/default.json",
    "scs:config/util/logging/winston.json",
    "scs:config/util/representation-conversion/default.json",
    "scs:config/util/resource-locker/memory.json",
    "scs:config/util/variables/default.json"
  ],
  "@graph": [
    {
      "comment": "A single-pod server that stores its resources on disk while enforcing quota."
    },
    {
      "comment": "The set quota enforced globally",
      "@id": "urn:solid-server:default:variable:GlobalQuota",
      "@type": "Variable"
    },
    {
      "@id": "urn:solid-server:default:QuotaStrategy",
      "@type": "GlobalQuotaStrategy",
      "limit_amount": {
        "@id": "urn:solid-server:default:variable:GlobalQuota"
      },
      "limit_unit": "bytes"
    },
    {
      "@id": "urn:solid-server:default:SizeReporter",
      "@type": "FileSizeReporter",
      "ignoreFolders": [ "^/\\.internal$" ]
    },
    {
      "@id": "urn:solid-server:test:Instances",
      "@type": "RecordObject",
      "record": [
        {
          "RecordObject:_record_key": "app",
          "RecordObject:_record_value": { "@id": "urn:solid-server:default:App" }
        }
      ]
    }
  ]
}
